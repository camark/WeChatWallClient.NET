@{
    Layout = null;
}
@model List<WeChatWallClient.NET.Models.Msg>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>微信墙后台管理</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row col-lg-10 col-lg-offset-1" style="position:relative;">
            <table class="table">
                <thead>
                    <tr>
                        <th>#序号</th>
                        <th>头像</th>
                        <th>名称</th>
                        <th>发送时间</th>
                        <th>发送内容</th>
                        <th>相应操作</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td><img src="~/corvers/@(Model[i].fakeid).jpg" /></td>
                            <td>@Model[i].nick_name</td>
                            <td>@Model[i].date_time</td>
                            <td style="max-width:400px;">@Model[i].content</td>
                            <td>
                                <a class="btn btn-success" href="/Home/Sq?id=@Model[i].Id">上墙</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</body>
</html>
